<h1 class="text-center"><%= @article.title %></h1>
<div class="box">
  <p><%= @article.content %></p>
</div>
<%= link_to "Edit Article", edit_article_path(@article.id), class: 'btn btn-primary mr-2' %>
<%= link_to "Back", articles_path, class: 'btn btn-primary mr-2' %>
<%= link_to "Delete Article", article_path(@article.id), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
